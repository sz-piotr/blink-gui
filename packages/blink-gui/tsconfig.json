{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "outDir": "dist/esm",
  },
  "exclude": ["dist"]
}
